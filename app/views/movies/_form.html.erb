
  <div class="row margin-top-100">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 col-offset-sm-3">
        <% if movie.errors.any? %>
          <div id="error_explanation">
            <h4><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

            <ul>
              <% movie.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <fieldset class="border p-2">
            <legend  class="w-auto">Share a Youtube movie</legend>
            <%= form_with(model: movie, local: true) do |form| %>
              <div class="form-group row">
                  <%= form.label :url, class: "col-sm-2 col-form-label" %>
                  <div class="col-sm-10">
                    <%= form.text_field :url, id: :movie_url, class: "form-control", :error => false %>
                  </div>
              </div>

              <div class="form-group row">
                <%= form.label :title, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.text_field :title, id: :movie_title, class: "form-control" , :error => false%>
                </div>
              </div>

              <div class="form-group row">
                <%= form.label :description, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= form.text_area :description, id: :movie_description, class: "form-control" , :error => false%>
                </div>
              </div>
              <div class="actions row">
                <div class="col-sm-2"></div>
                <div class="col-sm-offset-2 col-sm-10">
                  <%= form.submit "Shared", class: "btn btn-primary full-width"%>
                </div>
              </div>
            <% end %>
        </fieldset>
    </div>
  </div>
